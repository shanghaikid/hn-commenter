{
  "manifest_version": 3,
  "name": "HN Commenter",
  "version": "1.0",
  "host_permissions": [
    "https://news.ycombinator.com/*",
    "https://api.openai.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["https://news.ycombinator.com/item?id=*"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://news.ycombinator.com/reply?id=*"],
      "js": ["content-reply.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "height": 600,
    "width": 400
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": ["clipboardWrite", "storage"]
}
